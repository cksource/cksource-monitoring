{
  "name": "@cksource-cksource-monitoring/monitoring",
  "version": "0.0.1",
  "description": "CKSource Monitoring",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --build",
    "start": "node ./dist/server.js",
    "start:local": "npm run build && node ./dist/server.js",
    "start:local:infra": "docker-compose -f ./infrastructure/docker-compose.yml up -d",
    "stop:local:infra": "docker-compose -f ./infrastructure/docker-compose.yml down",
    "deps:check": "ncu",
    "lint": "eslint '**/*.ts'",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:cksource/cksource-monitoring.git"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@cksource-cs/http-client-module": "^1.6.2",
    "prom-client": "14.2.0"
  },
  "devDependencies": {
    "@cksource-cs/eslint-config-cs-module": "^4.1.1",
    "@cksource-cs/http-client-module": "^1.6.1",
    "@types/node": "18.11.18",
    "eslint": "8.6.0",
    "eslint-import-resolver-node": "0.3.6",
    "npm-check-updates": "10.2.2",
    "nyc": "15.1.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": ">=18.12.1"
  }
}